
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <%= message.age %>
       <%= link_to "edit" , edit_message_path(message) %>
        <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">年齢:</label>
    <div class="col-md-10">
      <%= f.text_field :age, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="bodytxt" class="control-label col-md-2">内容:</label>
    <div class="col-md-10">
    <%= f.text_area :body, :class => "form-control" %>
    </div>
    </div>
    
    <div class="col-md-3">
  <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
  </div>

<% end %>